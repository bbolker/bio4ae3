}

@article{owenashley_androgens_2004,
	title = {Androgens and the {Immunocompetence} {Handicap} {Hypothesis}: {Unraveling} {Direct} and {Indirect} {Pathways} of {Immunosuppression} in {Song} {Sparrows}.},
	volume = {164},
	issn = {0003-0147},
