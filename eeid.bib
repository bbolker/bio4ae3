	urldate = {2022-03-27},
	journal = {Proceedings of the Royal Society B: Biological Sciences},
	author = {Tain, Luke and Perrot-Minnot, Marie-Jeanne and Cézilly, Frank},
	month = dec,
	year = {2006},
	note = {Publisher: Royal Society},
	keywords = {geotactism, host manipulation by parasites, intermediate amphipod host, phototactism},
	pages = {3039--3045},
	file = {Full Text PDF:/home/bolker/Documents/zotero_new/storage/F4H2RWEH/Tain et al. - 2006 - Altered host behaviour and brain serotonergic acti.pdf:application/pdf},
}

@article{adamo_modulating_2002,
	title = {Modulating the {Modulators}: {Parasites}, {Neuromodulators} and {Host} {Behavioral} {Change}},
	volume = {60},
	issn = {0006-8977, 1421-9743},
	shorttitle = {Modulating the {Modulators}},
	url = {https://www.karger.com/Article/FullText/67790},
	doi = {10.1159/000067790},
	abstract = {Neuromodulators can resculpt neural circuits, giving an animal the behavioral flexibility it needs to survive in a complex changing world. This ability, however, provides parasites with a potential mechanism for manipulating host behavior. This paper reviews three invertebrate host-parasite systems to examine whether parasites can change host behavior by secreting neuromodulators. The parasitic wasp, \textit{Cotesia congregata}, suppresses host feeding partly by inducing the host \textit{(Manduca sexta)} to increase the octopamine concentration in its hemolymph. The increased octopamine concentration disrupts the motor pattern produced by the frontal ganglion, preventing the ingestion of food. \textit{Polymorphus paradoxus} (Acanthocephalan) alters the escape behavior of its host, \textit{Gammarus lacustris} (Crustacea), possibly through an effect on the host’s serotonergic system. The trematode \textit{Trichobilharzia ocellata} inhibits egg-laying in its snail host \textit{(Lymnaea stagnalis)}, partly by inducing the host to secrete schistosomin. Schistosomin decreases electrical excitability of the caudodorsal cells. The parasite also alters gene expression for some neuromodulators within the host’s central nervous system. In at least two of these three examples, it appears that the host, not the parasite, produces the neuromodulators that alter host behavior. Producing physiologically potent concentrations of neuromodulators may be energetically expensive for many parasites. Parasites may exploit indirect less energetically expensive methods of altering host behavior. For example, parasites may induce the host’s immune system to produce the appropriate neuromodulators. In many parasites, the ability to manipulate host behavior may have evolved from adaptations designed to circumvent the host’s immune system. Immune-neural-behavioral connections may be pre-adapted for parasitic manipulation.},
	language = {english},
	number = {6},
	urldate = {2022-03-27},
	journal = {Brain, Behavior and Evolution},
	author = {Adamo, Shelley A.},
	year = {2002},
	pmid = {12563169},
	note = {Publisher: Karger Publishers},
	pages = {370--377},
	file = {Snapshot:/home/bolker/Documents/zotero_new/storage/HZDJ3WCL/67790.html:text/html},
}

