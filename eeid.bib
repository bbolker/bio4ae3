@article{folstad_parasites_1992,
	title = {Parasites, {Bright} {Males}, and the {Immunocompetence} {Handicap}},
	volume = {139},
	issn = {0003-0147},
	url = {https://www.journals.uchicago.edu/doi/abs/10.1086/285346},
