	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1558-5646.2012.01654.x},
	keywords = {Fisherian benefits, good genes, indirect selection, mate choice, meta-analysis, sexual selection},
	pages = {2665--2673},
	file = {Full Text PDF:/home/bolker/Documents/zotero_new/storage/UQG2C5VT/Prokop et al. - 2012 - Meta-Analysis Suggests Choosy Females Get Sexy Son.pdf:application/pdf;Snapshot:/home/bolker/Documents/zotero_new/storage/X42H2ZWU/j.1558-5646.2012.01654.html:text/html},
